{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "typeRoots": [
      "./types"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "types/**.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}